    }
    .feature-row-about{
      margin-top: 0;
      margin-bottom: 0;
      .feature-row__item .lazyload__image-wrapper{
        img{
          padding-left: 0;
        }
      }
    }
  }
  
  .page_faq {
    .faq-block-text {
      .set{
        .content{
          padding-right: 0;
        }
      }
    }
  }
  
