/*==================== FAQ Page =====================*/
.page_faq {
  margin-top: 11.5%;
  .faq-block-text {
    .set{
      &:last-child{
        a.h2{
          margin-bottom: 0;
        }
      }
      a{
        text-transform: inherit;
        margin-bottom: 21px;
        &.active{
          font-weight: bold;
        }
        .close-icon {
          display: inline-block;
          top: 14px;
          right: 0;
          width: 9px;
          height: 9px;
          transform: rotate(0deg);
          transition: transform 300ms ease;
          &::after{
            content: "";
            display: block;
            background: #123b7e;
            height: 7px;
            width: 1px;
            position: absolute;
            left: 3px;
          }
          &::before {
            content: "";
            display: block;
            background: #123b7e;
            width: 7px;
            height: 1px;
            position: absolute;
            top: 3px;
          }
          &.spin{
            width: 11px;
            &:after{
              display: none;
            }
            &::before {
              content: "";
              width: 9px;
              height: 2px;
            }
          }
        }
      }
      .content{
        margin-bottom: 7%;
        padding-right: 5%;
      }
    }
  }
}

