<div class="grid grid--full grid--no-gutters image-bar">
  {% case section.blocks.size %}
    {% when 1 %}
      {%- assign column_size = '' -%}
    {% when 2 %}
      {%- assign column_size = 'small--one-whole medium-up--one-half large--one-half' -%}
    {% when 3 %}
      {%- assign column_size = 'small--one-whole medium--one-half large--one-third' -%}
    {% else %}
      {%- assign column_size = 'small--one-whole medium--one-half large--one-quarter' -%}
  {% endcase %}
  
  <div class="section-header text-center">
    {% if section.settings.heading != blank %}
      <h2 class="title">{{ section.settings.heading | escape }}</h2>
    {% endif %}
  </div>
  
  <div class="grid-uniform row-negative-bottom">

  {% for block in section.blocks %}
    <div class="grid-item image-bar-content text-center {{ column_size }} js" {{ block.shopify_attributes }}>
      {% if block.settings.link != blank %}
        <a class="image-bar__link" href="{{ block.settings.link }}">
          <div class="image-bar__item">
            <img src="{{ block.settings.image | img_url: 'original' }}" />
      {% elsif block.settings.image != blank %}
        <div class="image-bar__item image-bar__item--{{ block.id }}">
          <img src="{{ block.settings.image | img_url: 'original' }}" />
      {% else %}
        <div class="image-bar__item">
      {% endif %}
        <div class="image-bar__content text-left{% if block.settings.cta_label != blank or block.settings.link != blank %} image-bar__overlay{% endif %}">
        {% if block.settings.image == blank %}
          {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
        {% endif %}

        {% if block.settings.cta_label != blank %}
          <div class="image-bar__text">
            <p class="image-bar__caption">{{ block.settings.cta_label }}</p>
          </div>
        {% endif %}
        </div>  
      {% if block.settings.link != blank %}
        </div></a>
      {% else %}
        </div>
      {% endif %}
    </div>
  {% endfor %}
      
    </div>
      
</div>

{% if section.blocks.size == 0 %}
  {% include 'no-blocks' %}
{% endif %}



