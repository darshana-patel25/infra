<div class="text-center press-block-text">
  {% for block in section.blocks %}
    {% if block.settings.link_text != blank and block.settings.link_url != blank %}
      <a href="{{ block.settings.link_url }}">{{ block.settings.link_text }}</a>
    {% endif %}
  {% endfor %}
</div>
{% schema %}
  {
    "name": "Block Text",
    "settings": [
	],
    "blocks": [
	  {
        "type": "text",
        "name": "text",
        "settings": [
		  {
            "type": "text",
            "id": "link_text",
            "label": "Link Text",
            "default": "Text"
          },
		  {
            "type": "url",
            "id": "link_url",
            "label": "Link Url"
          }
	  	]
	  }
	]
  }
{% endschema %}