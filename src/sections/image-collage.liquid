 		{
            "type": "image_picker",
            "id": "image_center_right",
            "label": "Image center right",
			"info":"image size(318px*390px)"
          },
 		{
            "type": "image_picker",
            "id": "image_center_bottom",
            "label": "Image center bottom",
			"info":"image size(640px*636px)"
         },
 		{
            "type": "image_picker",
            "id": "image_right",
            "label": "Image right",
			"info":"image size(635px*1032px)"		

         },
		{
            "type": "url",
            "id": "shop_url1",
