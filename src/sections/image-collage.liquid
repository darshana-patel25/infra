
  <div id="image-gallery-{{ section.id }}">

      <div class="item grid-item left_grid small--one-whole medium-down--hide medium--three-fifths large--one-third">
        {{ section.settings.image_left | img_url: 'master' | img_tag: section.settings.image_left.alt, 'image left' }}
      </div>

      <div class="item grid-item center_grid small--one-whole medium--one-whole large--one-third">
          <div class="center_top">

            <div class="item grid-item center_left small--one-half medium--one-half large--one-half">
              {{ section.settings.image_center_left | img_url: 'master' | img_tag: section.settings.image_center_left.alt, 'image center left' }}
            </div>
            <div class="item grid-item center_right small--one-half medium--one-half large--one-half">
              {{ section.settings.image_center_right | img_url: 'master' | img_tag: section.settings.image_center_right.alt, 'image center right' }}
            </div>

          </div>

          <div class="center_bottom">
            {{ section.settings.image_center_bottom | img_url: 'master' | img_tag: section.settings.image_center_bottom.alt, 'image center bottom' }}
          </div>

      </div>

      <div class="item grid-item right_grid medium-down--hide small--one-whole medium--three-fifths large--one-third">
        {{ section.settings.image_right | img_url: 'master' | img_tag: section.settings.image_right.alt, 'image right' }}
      </div>
    <div class="mobile_shop large--hide">
      <a href="{{ section.settings.shop_url1 }}">Shop lips</a>
      <a href="{{ section.settings.shop_url2 }}">Shop skin</a>
    </div>
    

  </div>

